<%= render 'list' %>
<%= form_for(@product) do |f| %>
	<%=f.label :name %>
	<%=f.text_field :name %>
	<%=f.label :price, :rate %>
	<%=f.text_field :price %>
	<%=f.label :active %>
	<%=f.text_field :active %>
	<%=f.label :category %>
	<%=f.select :category_id, Category.all.collect { |c| [ c.name, c.id ] }, include_blank: true %>
	<%=f.submit %>
<% end %>
