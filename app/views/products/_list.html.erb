<table id="simple-table" class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>Name</th>
			<th>Rate</th>
			<th>Active</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		<% @products.each do |p| %>
			<tr>
				<td><%= p.name %> </td>
				<td><%= p.price %> </td>
				<td><%= p.active %> </td>
				<td>
					<%= link_to 'edit', edit_product_path(p.id)  %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

