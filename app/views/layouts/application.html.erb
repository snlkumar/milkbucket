<!DOCTYPE html>
<html>
<head>
  <title>Milkbucket</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body class="no-skin">
	<div id="navbar" class="navbar navbar-default ace-save-state">
		<div id="navbar-container" class="navbar-container ace-save-state">		
			<div class="navbar-header pull-left">
				<a class="navbar-brand" href="index.html">
					<small>
						<i class="fa fa-leaf"></i>
						Ace Admin
					</small>
				</a>
			</div>
			<div class="navbar-buttons navbar-header pull-right" role="navigation">
				<ul class="nav ace-nav">					
					<li class="light-blue dropdown-modal">
							<a class="dropdown-toggle" href="#" data-toggle="dropdown" aria-expanded="false">
								<!-- <img alt="Jason's Photo" src="../assets/avatars/user.jpg" class="nav-user-photo"> -->
								<span class="user-info">
									<small>Welcome,</small>
									Jason
								</span>

								<i class="ace-icon fa fa-caret-down"></i>
							</a>

							<ul class="user-menu dropdown-menu-right dropdown-menu dropdown-yellow dropdown-caret dropdown-close">
								<li>
									<a href="#">
										<i class="ace-icon fa fa-cog"></i>
										Settings
									</a>
								</li>

								<li>
									<a href="profile.html">
										<i class="ace-icon fa fa-user"></i>
										Profile
									</a>
								</li>

								<li class="divider"></li>

								<li>
									<a href="#">
										<i class="ace-icon fa fa-power-off"></i>
										Logout
									</a>
								</li>
							</ul>
						</li>
				</ul>
			</div>
		</div>
	</div>
	<div id="main-container" class="main-container ace-save-state">
		<div id="sidebar" class="sidebar responsive ace-save-state" data-sidebar="true" data-sidebar-scroll="true" data-sidebar-hover="true">
			<ul class="nav nav-list" style="top: 0px;">
					<li  class= "<%= 'active' if @tab == 'dashboard' %>" >
						<a href="/histories/new">
							<i class="menu-icon fa fa-tachometer"></i>
							<span class="menu-text"> New Demand </span>
						</a>
						<b class="arrow"></b>
					</li>
					<li class= "<%= 'active' if @tab == 'report' %>">
						<a href="/reports">
							<i class="menu-icon fa fa-tachometer"></i>
							<span class="menu-text"> Reports </span>
						</a>
						<b class="arrow"></b>
					</li>
					<li class= "<%= 'active' if @tab == 'Cash' %>">
						<a href="/histories/cash">
							<i class="menu-icon fa fa-tachometer"></i>
							<span class="menu-text">Add Cash </span>
						</a>
						<b class="arrow"></b>
					</li>
					<li class= "<%= 'active' if @tab == 'Cash' %>">
						<a href="/products/milk">
							<i class="menu-icon fa fa-tachometer"></i>
							<span class="menu-text"> Milk Poducts </span>
						</a>
						<b class="arrow"></b>
					</li>
					<li class= "<%= 'active' if @tab == 'Cash' %>">
						<a href="/products">
							<i class="menu-icon fa fa-tachometer"></i>
							<span class="menu-text"> Dahi Poducts </span>
						</a>
						<b class="arrow"></b>
					</li>
			</ul>
		</div>	
		<div class="main-content">
			<%= yield %>
		</div>
		<div class="footer">
		</div>
		<a class="btn-scroll-up btn btn-sm btn-inverse" id="btn-scroll-up" href="#">
			<i class="ace-icon fa fa-angle-double-up icon-only bigger-110"></i>
		</a>
	</div>
</body>
</html>
